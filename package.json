{
  "name": "fork-knife-backend",
  "version": "1.0.0",
  "description": "Restaurant booking system - modular monolith",
  "engines": { 
    "node": ">=20 <21", 
    "npm": ">=9" 
  },
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production NODE_OPTIONS=\"--max-old-space-size=768 --max-semi-space-size=16\" node dist/main",
    "generate": "npx prisma generate",
    "build": "npm run generate && nest build",
    "migrate:deploy": "prisma migrate deploy",
    "lint": "eslint . --ext .ts --max-warnings=0 --fix",
    "validate:schema": "ajv validate -s 'contracts/pos/**/*.schema.json' -c ajv-formats --spec=draft2020 -m strict=false"
  },
  "dependencies": {
    "@nestjs/platform-fastify": "^10.4.0",
    "fastify": "^4.27.2",
    "@fastify/cors": "^8.4.2",
    "fastify-raw-body": "^5.0.0",
    "prisma": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "cross-env": "^7.0.3",
    "typescript": "^5.6.3"
  }
}